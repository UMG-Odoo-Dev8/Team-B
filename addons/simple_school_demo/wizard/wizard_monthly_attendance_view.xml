<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="monthly_attendance_view_form" model="ir.ui.view">
        <field name="name">model_name.view.form</field>
        <field name="model">month.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="academic_section" />
                        <field name="att_month" />
                        <field name="roll_no" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="month_attendance_action" model="ir.actions.act_window">
        <field name="name">Student Month Attendance</field>
        <field name="res_model">month.attendance.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <!-- <field name="target">new</field> -->
    </record>


</odoo>
