<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view of Attendance Sheet Information -->
    <record id="attendance_view_tree" model="ir.ui.view">
        <field name="name">attendance.view.tree</field>
        <field name="model">attendance.model</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="attendance_date" />
                <field name="section_name"/>
                <field name="attendance_id" />
            </tree>
        </field>
    </record>
    <!-- Form view of Attendance Sheet Information -->
    <record id="view_attendance_form" model="ir.ui.view">
        <field name="name">view.attendance.form</field>
        <field name="model">attendance.model</field>
        <field name="arch" type="xml">
            <form string="Daily Attendance Information">
                <header>
                    <button name="attendance_validate" string="Validate" states="draft" type="object"/>
                    <button name="attendance_draft" string="Reset To Draft" states="validate" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <separator string="Daily Attendance Sheet"/>
                    <group>
                        <group>
                            <field name="attendance_date" required="True"/>
                        </group>
                        <group>
                            <field name="section_name" required="True"/>
                            <field name="teacher_head"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="daily_attendance" string="Daily Attendance Table">
                            <field name="attendance_id">
                                <tree editable="bottom">
                                    <field name="student_id"/>
                                    <field name="roll_no"/>
                                    <field name="morning_attendance" />
                                    <field name="afternoon_attendance" />
                                    <field name="point"  />
                                </tree>
                                <form>
                                    <group>
                                        <field name="morning_attendance" />
                                        <field name="afternoon_attendance" />
                                        <field name="point" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="attendance_view_search" model="ir.ui.view">
        <field name="name">attendance.view.search</field>
        <field name="model">attendance.model</field>
        <field name="arch" type="xml">
            <search string="Attendance">
                
            </search>
        </field>
    </record>

    <!-- Form view of Student Leave Request -->
    <record id="view_student_leave_form" model="ir.ui.view">
        <field name="name">studentleave.view.form</field>
        <field name="model">leave.studentrequest</field>
        <field name="arch" type="xml">
            <form string="Leave Request">
                <field name="can_reset" invisible="1"/>
                <field name="can_approve" invisible="1"/>
                <header>
                    <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    <button string="Approve" name="action_confirm" type="object" class="oe_highlight" />
                    <button string="Mark as Draft" name="action_draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="confirm,validate"/>
                </header>
                <sheet>
                    <group>
                        <group string="Student Information">
                            <field name="section_id" required="True"/>
                            <field name="student_id"  widget="many2one"/>
                        </group>
                        <group string="Leave Details">
                            <field name="start_date" required="True"/>
                            <field name="end_date" required="True"/>
                            <field name="total_leave_day" />
                            <field name="leave_type"/>
                        </group>
                    </group>
                    <group string="Reason">
                        <field name="reason" required="True"/>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- Action of Form & Tree View for Student Leave Request-->
    <record id="student_leave_request_action" model="ir.actions.act_window">
        <field name="name">Student Leave Form</field>
        <field name="res_model">leave.studentrequest</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="student_leave_request_menu"
        name="Student Leave Request"
        action="student_leave_request_action"
        parent="attendance_menu"
        sequence="10"/>

    <!-- Action of Form & Tree View for Attendance Sheet Information-->
    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Attendance Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attendance.model</field>
        <field name="view_mode">tree,form</field>
        <field name="target"></field>
        <field name="help" type="html">
            <p class = "o_view_nocontent_smiling_face">
                Create Your First Student Attendance
            </p>
        </field>
    </record>
    <menuitem
        id="student_attendance_menu"
        name="Daily Attendance Sheet"
        action="action_attendance"
        parent="attendance_menu"
        sequence="5"/>


</odoo>
