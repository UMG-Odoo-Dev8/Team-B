<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_school_tree" model="ir.ui.view">
        <field name="name">view_school_tree</field>
        <field name="model">school.model</field>
        <field name="arch" type="xml">
            <tree decoration-success="role == 'student'" decoration-info="role == 'teacher'"
                sample="1" multi_edit="1">    
                <field name="name" />   
                <field name="father_name" /> 
                <field name="role" optional="show" decoration-success="role=='student'"
                    decoration-info="role in ('teacher','in consulation')" widget="badge"/> 
                <field name="teacher_role" optional="hide"/> 
                <field name="gender" />    
                <field name="dob" />    
                <field name="age" />    
                <field name="address" />
            </tree>
        </field>
    </record>
    <record id="view_school_form" model="ir.ui.view">
        <field name="name">view_school_form</field>
        <field name="model">school.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <separator string="Demo Private School"/>
                    <group>
                        <group>
                            <field name="photo" widget="image" class="oe_left oe_avatar"/>    
                            <field name="name" />    
                            <field name="father_name" />    
                        </group>
                        <group>
                            <field name="role"/> 
                            <field name="teacher_role" widget="radio" attrs="{'invisible':[('role','=','student')]}"/> 
                            <field name="gender" />    
                            <field name="dob" />    
                            <field name="age" />    
                            <field name="address" />   
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="new_school_action" model="ir.actions.act_window">
        <field name="name">School Panel</field>
        <field name="res_model">school.model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Student List</field>
        <field name="res_model">school.model</field>
        <field name="domain">[('role','=','student')]</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher Panel</field>
        <field name="res_model">school.model</field>
        <field name="domain">[('role','=','teacher')]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_student_sub"
        name="Student"
        action="student_action"
        parent="school_sub_menu"
        sequence="5"/>
    <menuitem
        id="menu_teacher_sub"
        name="Teacher"
        action="teacher_action"
        parent="school_sub_menu"
        sequence="5"/>


</odoo>
